import API from '../../api/api_rest';
import CONFIG from '../../config/config'

export async function create_patient(arg)
{
  let data = {
    auth: {
      token: arg.token,
    }, 
    param: {
      pii: arg.pii
    }
  }

  return await API.run(data, '/app/emr/mru/patient/write');
}

